<Window x:Class="IgnorableAttributeIntro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IgnorableAttributeIntro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="50">
    <StackPanel Orientation="Vertical">
        <Button x:Name="firstButton" d:Content="Click me" Click="firstButton_Click" Background="LightGreen" Height="80" Margin="30" />
        <d:Button x:Name="secondButton" Content="second button" Background="LightCoral" Height="80" Margin="30" />
    </StackPanel>
</Window>
