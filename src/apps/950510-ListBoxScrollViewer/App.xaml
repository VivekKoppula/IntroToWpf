             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ListBoxScrollViewer"
             xmlns:localVs="clr-namespace:ListBoxScrollViewer.Views"             
             xmlns:localVms="clr-namespace:ListBoxScrollViewer.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type localVms:UserControl1ViewModel}">
            <localVs:UserControl1 />
        </DataTemplate>
        <DataTemplate DataType="{x:Type localVms:UserControl2ViewModel}">
            <localVs:UserControl2 />
        </DataTemplate>
        <DataTemplate DataType="{x:Type localVms:UserControl3ViewModel}">
            <localVs:UserControl3 />
        </DataTemplate>
    </Application.Resources>
</Application>
